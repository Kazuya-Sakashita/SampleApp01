<div class="max-w-md mx-auto py-2 px-1 bg-white my-5">
  <h2 class="text-white text-5xl text-center p-2 text-opacity-50 bg-indigo-500 rounded-lg ">Contact</h2>

  <div class="max-w-screen-2xl px-4 md:px-8 mx-auto">


    <%= form_with(model: @contact, local: true) do |f| %>
      <div class="mt-4">
        <div class='form-header'>
          <h5 class='form-header-text'>
            お問い合わせフォーム
          </h5>
        </div>
      </div>
      <div class="correct-msg-box">
        <% if @contact.errors.any? %>
          <div id="error_explanation">
            <ul>
              <% @contact.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="correct-msg-main">
          <div class="mt-5">
            <div class="correct-text-field">
              <%= f.label "お名前", class: "text-lg font-semibold" %>
              <%= f.text_field :name, placeholder: "お名前", class: "w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600 bg-gray-100" %>
            </div>
           <div class="mt-5">
              <%= f.label "お問合せ内容", class: "text-lg font-semibold" %>
              <%= f.text_area :content, placeholder: "お問合せ内容を入力してください", class: "w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600 bg-gray-100" %>
            </div>
            <div class="send-btn-contents">
              <div class="mt-10 my-10">
                <%= f.button type: "submit", class: "lg:mt-2 xl:mt-0 flex-shrink-0 inline-flex text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded", style: 'border-style: none;' do %>
                  送信 <i class="fas fa-paper-plane"></i>
                <% end %>
              </div>
              <div class="register-btn">
                <%= link_to "もどる", root_path %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>