<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="p-2 ">
    <div class="relative">
      <%= form.label :"カテゴリ", { class: "leading-7 text-sm text-gray-600" } %>
      <%= form.text_field :title, { class: "w-full bg-gray-100 bg-opacity-50 rounded border border-gray-300 focus:border-indigo-500 focus:bg-white focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" } %>
    </div>

    <div class="p-2 ">
      <%= form.label :"内容", { class: "leading-7 text-sm text-gray-600" } %>
      <%= form.text_area :content, { class: "w-full bg-gray-100 bg-opacity-50 rounded border border-gray-300 focus:border-indigo-500 focus:bg-white focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" } %>
    </div>

    <div class="field">
      <%= form.label :"投稿者", { class: "leading-7 text-sm text-gray-600" } %>
      <%= form.text_field :author, { class: "w-full bg-gray-100 bg-opacity-50 rounded border border-gray-300 focus:border-indigo-500 focus:bg-white focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" } %>
    </div>

    <div class="actions">
      <%= form.submit '登録', class:"ml-4 inline-flex text-gray-700 bg-green-600 bg-opacity-50 border-0 py-2 px-6 focus:outline-none hover:bg-green-300 hover:text-white rounded text-lg" %>
    </div>
  </div>
<% end %>

