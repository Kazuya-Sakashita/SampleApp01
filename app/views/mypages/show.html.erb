<p id="notice"><%= notice %></p>

<div>
  <h1 class="text-white text-5xl text-center text-opacity-50 bg-indigo-500 rounded-lg font-semibold ">My post</h1>
</div>

<div class="max-w-md py-4 px-8 bg-white my-5">
  <div class="flex justify-center md:justify-end -mt-16">
  </div>

</div>

<div>
  <table class="mt-5 mx-2">
    <thead>
    <tr>
      <th>Category</th>
      <th>Content</th>
      <!--    <th>Author</th>-->
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <div class="text-center font-semibold "><%= post.category %></div>
        </td>
        <td>
          <%= link_to post do %>
            <div class="bg-indigo-100 border-0 py-2 px-8 focus:outline-none hover:bg-indigo-600 font-semibold rounded ">
              <%= post.content %><br>
              <!--<%#= post.user.email %>-->

            </div>
          <% end %>
        </td>
        <td>
          <%= link_to mypage_path(post), method: :delete do %>
            <svg class="h-8 w-8 text-indigo-500"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round">  <polyline points="3 6 5 6 21 6" />  <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2" />  <line x1="10" y1="11" x2="10" y2="17" />  <line x1="14" y1="11" x2="14" y2="17" /></svg>
          <% end %>
        </td>
        <!--        <td><%#= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
<br>

<div class="flex justify-around p-2 ">
  <%= link_to new_post_path do %>
    <div clss="text-xl font-medium text-indigo-500">
      <p class="lg:mt-2 xl:mt-0 flex-shrink-0 inline-flex text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 font-semibold rounded-2xl">New
        Post</p>
    </div>
  <% end %>
</div>
