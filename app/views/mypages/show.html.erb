<p id="notice"><%= notice %></p>

<div>
  <h1 class="text-white text-5xl text-center text-opacity-50 bg-indigo-500 rounded-lg font-semibold ">My post</h1>
</div>
<div class="max-w-md mx-auto py-2 px-1 bg-white my-5">
<div class="max-w-md py-4 px-8 bg-white my-5">

</div>

<div>
  <table class="mt-5 mx-2">
    <thead>
    <tr>
      <th>Category</th>
      <th>Content</th>
      <!--    <th>Author</th>-->
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <div class="text-center font-semibold "><%= post.category %></div>
        </td>
        <td>
          <%= link_to post do %>
            <div class="bg-indigo-100 border-0 py-2 px-8 focus:outline-none hover:bg-indigo-600 font-semibold rounded ">
              <%= post.content %><br>
              <!--<%#= post.user.email %>-->

            </div>
          <% end %>
        </td>
        <td>
          <div class="flex">
            <div>
              <% if post.post_published_state == "personal" %>
                <%= link_to post_state_path(post.id) do %>
                  <svg class="h-8 w-8 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path>
                  </svg>
                <% end %>
              <% elsif post.post_published_state == "share" %>
                <%= link_to post_state_path(post.id) do %>
                  <svg class="h-8 w-8 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                <% end %>
              <% end %>
            </div>
            <div>
              <%= link_to mypage_path(post), method: :delete, data: { confirm: "削除しますか？" } do %>
                <svg class="h-8 w-8 text-indigo-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="3 6 5 6 21 6"/>
                  <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                  <line x1="10" y1="11" x2="10" y2="17"/>
                  <line x1="14" y1="11" x2="14" y2="17"/>
                </svg>
              <% end %>
            </div>
          </div>
        </td>
        <!--        <td><%#= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
<br>

</div>